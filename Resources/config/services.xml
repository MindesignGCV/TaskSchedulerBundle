<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>
    <!-- core services -->
    <service id="ts.event_dispatcher" class="Rewieer\TaskSchedulerBundle\Event\EventDispatcher">
    </service>
    <service id="ts.scheduler" class="Rewieer\TaskSchedulerBundle\Task\Scheduler">
      <argument type="service" id="ts.event_dispatcher" />
    </service>

    <!-- addons -->
    <service id="ts.scheduler_logger" class="Rewieer\TaskSchedulerBundle\Services\SchedulerLogger">
      <tag name="ts.event_subscriber"/>
      <tag name="monolog.logger" channel="scheduler" />
      <argument type="service" id="logger" />
    </service>
  </services>
</container>
